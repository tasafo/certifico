<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <title>certificar.me</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="navbar-inner">
        <div class="container">
          <div class="navbar-header">
            <a class="navbar-brand" href="/">certificar.me</a>
          </div>
          <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <li><%= link_to current_user.email, '#' %></li>
            <li><%= link_to t('menu.templates'), templates_path %></li>
            <li><%= link_to t('menu.certificates'), certificates_path %></li>
            <li><%= link_to t('menu.issues'), issues_path %></li>
            <li><%= link_to t('menu.update_account'), edit_user_registration_path %></li>
            <li><%= link_to t('menu.sign.out'), destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to t('menu.sign.in'), new_user_session_path %></li>
            <li><%= link_to t('menu.sign.up'), new_user_registration_path %></li>
          <% end %>
          </ul>
        </div>
      </div>
    </header>

    <div class="container master-container">
      <% if alert %>
        <div class="alert alert-danger fade in" data-alert="alert">
          <a class="close" data-dismiss='alert' href="#">×</a>
          <p><%= alert %></p>
        </div>
      <% end %>

      <% if notice %>
        <div class="alert alert-success fade in" data-alert="alert">
          <a class="close" data-dismiss='alert' href="#">×</a>
          <p><%= notice %></p>
        </div>
      <% end %>

      <%= yield %>
    </div>

    <footer class="footer">
      <div class="container">
        <p>Copyright 2016 <a href="https://nomadetec.com.br">Nômade Tecnologia</a></p>
      </div>
    </footer>
  </body>
</html>
