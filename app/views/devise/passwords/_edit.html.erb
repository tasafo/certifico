<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <%= f.input :password, required: true, autofocus: true, hint: ("#{@minimum_password_length} #{t('hint.user.password.characters_minimum')}" if @minimum_password_length) %>
  <%= f.input :password_confirmation, required: true %>

  <%= f.button :submit, t('title.password.change_my'), class: 'btn btn-primary' %>
<% end %>

<%= render "devise/shared/links" %>
