<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.input :email, required: true, autofocus: true %>
  <%= f.input :user_name, required: true %>
  <%= f.input :full_name, required: true %>
  <%= f.input :password, required: true, hint: ("#{@minimum_password_length} #{t('hint.user.password.characters_minimum')}" if @minimum_password_length) %>
  <%= f.input :password_confirmation, required: true %>

  <%= f.button :submit, t('menu.sign.up'), class: 'btn btn-primary' %>
<% end %>

<%= render "devise/shared/links" %>
