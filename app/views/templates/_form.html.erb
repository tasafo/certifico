<%= simple_form_for(@template) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :font_color %>

    <%= f.input :image_cache, as: :hidden %>
    <%= f.input :image, as: :file, hint: t('hint.template.image') %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
