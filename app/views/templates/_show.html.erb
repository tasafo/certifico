<table class="table table-responsive">
  <tbody>
    <tr>
      <th><%= t('mongoid.attributes.template.name') %></th>
      <td><%= @template.name %></td>
    </tr>
    <tr>
      <th><%= t('mongoid.attributes.template.font_color') %></th>
      <td><%= @template.font_color %></td>
    </tr>
    <tr>
      <th><%= t('mongoid.attributes.template.image') %></th>
      <td><%= cl_image_tag(@template.image, width: 450, height: 250) %></td>
    </tr>
  </tbody>
</table>

<%= link_to t('title.action.edit'), edit_template_path(@template), class: 'btn btn-primary' %>
<%= link_to t('title.action.back'), templates_path, class: 'btn btn-default' %>
