<%= simple_form_for(@certificate) do |f| %>
  <%= f.association :template, collection: current_user.templates %>
  <%= f.association :category %>
  <%= f.input :title %>
  <%= f.input :initial_date%>
  <%= f.input :final_date %>
  <%= f.input :workload %>
  <%= f.input :local %>
  <%= f.input :site %>

  <%= f.input :image_cache, as: :hidden %>
  <%= f.input :image, as: :file %>

  <%= f.button :submit, class: 'btn btn-primary' %>
  <%= link_to t('title.action.back'), certificates_path, class: 'btn btn-default' %>
<% end %>
