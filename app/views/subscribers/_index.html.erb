<%= link_to "#{t('title.action.new')} #{t('mongoid.models.subscriber')}", new_certificate_subscriber_path(@certificate), class: 'btn btn-primary' %>
<%= link_to "#{t('title.action.import')} #{t('title.models.subscribers')}", new_certificate_import_subscriber_path(@certificate), class: 'btn btn-primary' %>

<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th><%= t('mongoid.attributes.user.full_name') %></th>
      <th><%= t('mongoid.attributes.user.email') %></th>
      <th><%= t('mongoid.attributes.subscriber.profile_id') %></th>
      <th><%= t('mongoid.attributes.subscriber.theme') %></th>
      <th><%= t('mongoid.title.subscriber.downloads') %></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @certificate.subscribers.each do |subscriber| %>
      <tr>
        <td><%= subscriber.user.full_name %></td>
        <td><%= subscriber.user.email %></td>
        <td><%= subscriber.profile.name %></td>
        <td><%= subscriber.theme %></td>
        <td class="text-center"><span class="badge"><%= subscriber.downloads.count %></span></td>
        <td><%= link_to t('title.action.edit'), edit_certificate_subscriber_path(@certificate, subscriber), class: 'btn btn-success' %></td>
        <td><%= link_to t('title.action.destroy'), certificate_subscriber_path(@certificate, subscriber), class: 'btn btn-danger', method: :delete, data: { confirm: t('title.action.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
